{
    "compilerOptions": {
      "target": "es5",
      "module": "es2015",
      "noImplicitAny": false,
      "declaration": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "strict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "outDir": "./dist",
      "baseUrl": "./",
      "allowSyntheticDefaultImports": true,
      "preserveSymlinks": true,
      "lib": [
        "dom",
        "es6",
        "es2015",
        "es2017.object"
      ],
      "types": [],
      "moduleResolution": "node"
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "src/**/*.spec.ts",
      "src/**/*.spec.data.ts",
      "src/**/__tests__/*.ts",
      "dist",
      "tmp"
    ],
    "angularCompilerOptions": {
      "genDir": "aot"
    }
  }
  